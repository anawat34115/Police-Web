{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "api/index.php",
      "dest": "/api"
    },
    {
      "src": "public",
      "dest": "/"
    }
  ],
  "env": {
    "DB_HOST": "your-mysql-host.com",
    "DB_NAME": "police_care_interview", 
    "DB_USER": "root",
    "DB_PASSWORD": "123"
  }
}
